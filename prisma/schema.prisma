generator client {
    provider = "prisma-client-js"
}
datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}
model User {
    id Int @id @default(autoincrement()) 

    fullName    String 
    email       String @unique
    password    String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id Int @id @default(autoincrement())

    name        String
    imageUrl    String


    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}